<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:text="Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClient"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnHost" />

    <Button
        android:text="Host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:id="@+id/btnHost"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/strHostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHost"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="36dp"
        android:layout_alignTop="@+id/btnHost"
        android:layout_toEndOf="@+id/btnHost" />

    <TextView
        android:text="@string/strClientText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewClient"
        android:layout_alignTop="@+id/btnClient"
        android:layout_alignStart="@+id/textViewHost" />
</RelativeLayout>