<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlActivityGame">

    <TextView
        android:background="@drawable/textview_border"
        android:text="@string/strShipsPlacedEnemy"
        android:textSize="28sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:id="@+id/gridLayoutEnemyBorder"
        android:layout_alignTop="@+id/gridLayoutEnemy"
        android:layout_alignStart="@+id/gridLayoutEnemy" />

    <TextView
        android:background="@drawable/textview_border"
        android:text="@string/strShipsPlacedPlayer"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/gridLayoutPlayerBorder"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewBackground"
        android:contentDescription="@string/app_name" /> <!-- kann weg -->


    <GridLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout">
    </GridLayout>

    <GridLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="@dimen/marginLayoutPlayerTop"
        android:layout_marginStart="@dimen/marginLayoutPlayerStart"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayoutEnemy">
    </GridLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTurn"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/gridLayout"
        android:layout_alignStart="@+id/gridLayout" />

    <Button
        android:text="@string/strAgain"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAgain" />

    <Button
        android:text="@string/strBackToMenu"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackToMenu" />

</RelativeLayout>